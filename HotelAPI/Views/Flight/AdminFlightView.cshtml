@model IEnumerable<ConsoleApp2.Models.Flight>
@{
    ViewBag.Title = "Flights List";
}
    <a asp-action="CreateFlight"><button type="button" class="btn btn-primary">Create</button></a>
<div class="card-deck">
    @foreach (var flight in Model)
    {
        var photoPath = "~/images/" +( @flight.PhotoPath??"no_image.png");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@flight.Route</h3>
                <h4> @flight.Departure</h4>
            </div>

            <img width="auto" height="250px"  src="@photoPath"
                 asp-append-version="true" />

            <div class="card-footer text-center">
                <form asp-action="DeleteFlight" asp-route-id="@flight.Id" method="post"> 
                    <button  type="submit" class="btn btn-danger m-1">Delete</button>
                </form>
            </div>
        </div>
    }
</div>