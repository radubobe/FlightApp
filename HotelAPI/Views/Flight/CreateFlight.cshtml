@model FlightVM

@{
    ViewBag.Title = "Create Flight";
}

@*To support file upload set the form element enctype="multipart/form-data" *@

    <form enctype="multipart/form-data" asp-action="CreateFlight"
          method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="PlaneName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PlaneName" class="form-control" placeholder="PlaneName">
                <span asp-validation-for="PlaneName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Seats" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Seats" class="form-control" placeholder="Seats">
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Price" class="form-control" placeholder="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group row">
            <label asp-for="Route" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Route" class="form-control" placeholder="Route">
                <span asp-validation-for="Route" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row">
            <label asp-for="Departure" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Departure" class="form-control" placeholder="Departure">
                <span asp-validation-for="Departure" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row">
            <label asp-for="Arrive" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Arrive" class="form-control" placeholder="Arrive">
                <span asp-validation-for="Arrive" class="text-danger"></span>
            </div>

        </div>

        @*  asp-for tag helper is set to "Photo" property. "Photo" property type is IFormFile
        so at runtime asp.net core generates file upload control (input type=file)
        *@

        <div class="form-group row">
            <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input">
                    <label class="custom-file-label">Choose File...</label>
                </div>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>

        @*This script is required to display the selected file in the file upload element*@

        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>

        }
    </form>